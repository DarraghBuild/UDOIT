        <material>
          <mattext xml:space="preserve" label="wct_question_label_1" texttype="TEXT/PLAIN" charset="US-ASCII">Which of the following statements is not true about “theory of mind”.&#xD;
</mattext>
          <matbreak />
        </material>
        <response_lid ident="RESP_MC" rcardinality="Single">
          <render_choice shuffle="Yes">
            <flow_label class="Row">
              <response_label ident="MC0" rshuffle="Yes">
                <material>
                  <mattext xml:space="preserve" label="wct_mc_answer_text0" texttype="TEXT/HTML" charset="US-ASCII">theory of mind is the ability to read someone else’s intentions, beliefs and desires</mattext>
                  <matbreak />
                </material>
              </response_label>
              <response_label ident="MC1" rshuffle="Yes">
                <material>
                  <mattext xml:space="preserve" label="wct_mc_answer_text1" texttype="TEXT/HTML" charset="US-ASCII">one of the most commonly conducted experiments in theory of mind research includes false-belief tasks</mattext>
                  <matbreak />
                </material>
              </response_label>
              <response_label ident="MC2" rshuffle="Yes">
                <material>
                  <mattext xml:space="preserve" label="wct_mc_answer_text2" texttype="TEXT/HTML" charset="US-ASCII">correlation does not indicate causation</mattext>
                  <matbreak />
                </material>
              </response_label>
              <response_label ident="MC3" rshuffle="Yes">
                <material>
                  <mattext xml:space="preserve" label="wct_mc_answer_text3" texttype="TEXT/HTML" charset="US-ASCII">none of the above</mattext>
